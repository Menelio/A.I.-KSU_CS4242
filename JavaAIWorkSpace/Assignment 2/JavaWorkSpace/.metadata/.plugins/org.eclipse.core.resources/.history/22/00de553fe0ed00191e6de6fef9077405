package eightTile;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Random;

public class Skratch {

	public static void main(String[] args) {
	
		PuzzleBox p = new PuzzleBox();
		
		AStarSearch a = new AStarSearch(p);
		
		System.out.println("Step 0 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
		
		System.out.println("Step 1 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
		
		System.out.println("Step 2 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
		
		System.out.println("Step 3 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
		
		System.out.println("Step 4 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
	}
	
	public static void display(PuzzleBox b) {

		System.out.print(b.getTiles()[0]);
		System.out.print(b.getTiles()[1]);
		System.out.println(b.getTiles()[2]);
		System.out.print(b.getTiles()[3]);
		System.out.print(b.getTiles()[4]);
		System.out.println(b.getTiles()[5]);
		System.out.print(b.getTiles()[6]);
		System.out.print(b.getTiles()[7]);
		System.out.println(b.getTiles()[8]);
	}

}
