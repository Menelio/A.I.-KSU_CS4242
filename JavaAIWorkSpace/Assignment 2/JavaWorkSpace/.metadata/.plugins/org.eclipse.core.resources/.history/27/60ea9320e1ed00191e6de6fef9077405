package eightTile;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Random;
import java.util.Scanner;

public class Skratch {

	public static void main(String[] args) {
		Scanner console = new Scanner (System.in);
		PuzzleBox p = new PuzzleBox();
		
		AStarSearch a = new AStarSearch(p);
		
		System.out.println("Starting Box /n f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^ a.getStatus()"+a.getStatus());
		
		int i=0;
		while(!a.getStatus()) {
			a.step();
			i++;
			
			display(a.current);
			System.out.println("^^^^^^^^^^^^^^^^^^^a.getStatus()"+a.getStatus());
			
			//System.out.println("->");
			//console.nextLine();
		}
		System.out.println("Ending Box /n f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^ number of steps "+ i);
		
		
		
	
	}
	
	public static void display(PuzzleBox b) {

		System.out.print(b.getTiles()[0]);
		System.out.print(b.getTiles()[1]);
		System.out.println(b.getTiles()[2]);
		System.out.print(b.getTiles()[3]);
		System.out.print(b.getTiles()[4]);
		System.out.println(b.getTiles()[5]);
		System.out.print(b.getTiles()[6]);
		System.out.print(b.getTiles()[7]);
		System.out.println(b.getTiles()[8]);
	}

}
