package util;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class PuzzleBoxUtils {
	/**<h1> Generate Tiles</h1>
	 * Generates a char array of tiles contain the chars 
	 * 1,2,3,4,5,6,7,8,* in a random order
	 * <p>
	 * @return tiles          : char[] containing tiles 
	 * */
	public static char[] genTiles() {
		List<Character> temp = new ArrayList<Character>();
		temp.add('1');
		temp.add('2');
		temp.add('3');
		temp.add('4');
		temp.add('5');
		temp.add('6');
		temp.add('7');
		temp.add('8');
		temp.add('*');
		Collections.shuffle(temp);
		char[] tiles = new char[9];
		for(int i = 0; i < tiles.length;i++ ) 
			tiles[i]= temp.get(i);	
		return tiles;
	}
}
