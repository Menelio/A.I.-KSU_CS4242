package eightTile;

import java.util.Arrays;

public class Skratch {

	public static void main(String[] args) {
		char[] goal = {'3','2','8','1','*','4','7','6','5'};
		/*
		char[] copy = goal;
		goal[0]='X';
		
		System.out.println(goal);
		System.out.println(copy);
		
		copy = Arrays.copyOf(goal, goal.length);
		goal[0]='D';
		
		System.out.println(goal);
		System.out.println(copy);
		*/
		
		PuzzleBox p = new PuzzleBox(goal,0);

		
		
		System.out.println();
		display(p);
		
		p.genMoves();
		
		for(int i=0; i< p.getMoves().length;i++) {
			System.out.println("----------"+(i+1));
			display(p.getMoves()[i]);
		}
	}
	
	public static void display(PuzzleBox b) {

		System.out.print(b.getTiles()[0]);
		System.out.print(b.getTiles()[1]);
		System.out.println(b.getTiles()[2]);
		System.out.print(b.getTiles()[3]);
		System.out.print(b.getTiles()[4]);
		System.out.println(b.getTiles()[5]);
		System.out.print(b.getTiles()[6]);
		System.out.print(b.getTiles()[7]);
		System.out.println(b.getTiles()[8]);
	}

}
