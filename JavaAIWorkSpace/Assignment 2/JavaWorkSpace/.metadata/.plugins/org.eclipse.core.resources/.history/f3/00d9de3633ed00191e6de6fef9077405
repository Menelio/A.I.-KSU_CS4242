package eightTile;

import javafx.scene.control.Label;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.GridPane;

/*Class for creating Puzzle Box in gPanes
 * */
public class PuzzleBoxPane {

	/**<h1> Constructor </h1>
	 * Create Puzzle Box Pane bases on given puzzle box
	 * <p>
	 * @param puzzleBox			: PuzzleBox to be represent in Pane
	 * @param name 				: String name of puzzle box(number)
	 * @postcondition 			: A pane representing the given 
	 * */
	public PuzzleBoxPane(PuzzleBox pb, String name) {
		//image of tiles 
		Image i1 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/1.png");
		ImageView v1 = new ImageView(i1);
		Image i2 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/2.png");
		ImageView v2 = new ImageView(i2);
		Image i3 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/3.png");
		ImageView v3 = new ImageView(i3);
		Image i4 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/4.png");
		ImageView v4 = new ImageView(i4);
		Image i5 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/5.png");
		ImageView v5 = new ImageView(i5);
		Image i6 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/6.png");
		ImageView v6 = new ImageView(i6);
		Image i7 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/7.png");
		ImageView v7 = new ImageView(i7);
		Image i8 = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/8.png");
		ImageView v8 = new ImageView(i8);
		Image iB = new Image("file:/C:/Users/Manny/Desktop/KSU/2019_Artificial%20Intelligence/Assignment%202/JavaWorkSpace/Assignment2/src/Assest/B.png");
		ImageView vB = new ImageView(iB);
		
		//gridPane inner and outer
		GridPane innerPane = new GridPane();
		GridPane outerPane = new GridPane();
		innerPane.setGridLinesVisible(true);
		
		//nested for loops to fill inner Pane
		for(int i=0; i < 2; i++) {
			for(int j=0; j <2; j++) {
				//set 1 tile
				if(pb.getTiles()[j]=='1') {
					innerPane.add(v1, j, i);
				}
				//set 2 tile
				if(pb.getTiles()[j]=='2') {
					innerPane.add(v2, j, i);
				}
				//set 3 tile
				if(pb.getTiles()[j]=='3') {
					innerPane.add(v3, j, i);
				}
				//set 4 tile
				if(pb.getTiles()[j]=='4') {
					innerPane.add(v4, j, i);
				}
				//set 5 tile
				if(pb.getTiles()[j]=='5') {
					innerPane.add(v5, j, i);
				}
				//set 6 tile
				if(pb.getTiles()[j]=='6') {
					innerPane.add(v6, j, i);
				}
				//set 7 tile
				if(pb.getTiles()[j]=='7') {
					innerPane.add(v7, j, i);
				}
				//set 8 tile
				if(pb.getTiles()[j]=='8') {
					innerPane.add(v8, j, i);
				}
				//set Blank tile
				if(pb.getTiles()[j]=='*') {
					innerPane.add(vB, j, i);
				}
			}
		}
		//create Label
		Label label = new Label("");
	}
}
