package eightTile;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Random;

public class Skratch {

	public static void main(String[] args) {
	
		PuzzleBox p = new PuzzleBox();
		
		AStarSearch a = new AStarSearch(p);
		
		System.out.println("Current 1 f(n)= " +a.current.getFn()+" h(n)= "+a.current.getHn()+" g(n)= "+a.current.getGn());
		display(a.current);
		System.out.println("^^^^^^^^^^^^^^^^^^^");
		a.step();
		
		for(int i=0; i < a.possibleMoves.size();i++) {
			System.out.println("Current "+i+" f(n)= " +a.possibleMoves.get(i).getFn()+" h(n)= "+a.possibleMoves.get(i).getHn()+" g(n)= "+a.possibleMoves.get(i).getGn());
			display(a.possibleMoves.get(i));
			System.out.println("^^^^^^^^^^^^^^^^^^^");
		}
	
	}
	
	public static void display(PuzzleBox b) {

		System.out.print(b.getTiles()[0]);
		System.out.print(b.getTiles()[1]);
		System.out.println(b.getTiles()[2]);
		System.out.print(b.getTiles()[3]);
		System.out.print(b.getTiles()[4]);
		System.out.println(b.getTiles()[5]);
		System.out.print(b.getTiles()[6]);
		System.out.print(b.getTiles()[7]);
		System.out.println(b.getTiles()[8]);
	}

}
